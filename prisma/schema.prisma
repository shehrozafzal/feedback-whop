generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Feedback {
  id           String   @id @default(cuid())
  experienceId String
  userId       String
  content      String
  sentiment    String?  // optional (positive, neutral, negative)
  visible      Boolean  @default(false)
  createdAt    DateTime @default(now())
}